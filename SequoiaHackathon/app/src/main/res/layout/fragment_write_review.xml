<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.sequoia.sequoiahackathon.fragment.WriteReviewFragment">

    <RelativeLayout
        android:id="@+id/rl_school_detail1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hackathon.sequoia.sequoiahackathon.views.FontedTextView
            android:id="@+id/tv_school_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="St. Joseph School" />


        <com.hackathon.sequoia.sequoiahackathon.views.FontedTextView
            android:id="@+id/tv_school_rating1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_school_name1"
            android:textSize="22sp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E0E0E0"
            android:text="Select Ratings" />

        <LinearLayout
            android:id="@+id/ll_rating1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_school_rating1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_infra1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hackathon.sequoia.sequoiahackathon.views.FontedTextView
                    android:id="@+id/tv_infra_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:text="Infrastructure"/>

                <RatingBar
                    android:id="@+id/rating_infra1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_infra_title1"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_teacher_quality1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.hackathon.sequoia.sequoiahackathon.views.FontedTextView
                    android:id="@+id/tv_teacher_quality1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:text="Teaching Quality"/>

                <RatingBar
                    android:id="@+id/rating_teacher_quality1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_teacher_quality1"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="0"/>
            </RelativeLayout>
        </LinearLayout>

        <com.hackathon.sequoia.sequoiahackathon.views.FontedEditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_rating1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:hint="Additonal comment"
            android:maxLines="3"/>

        <com.hackathon.sequoia.sequoiahackathon.views.FontedButton
            android:id="@+id/btn_submit_review"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit Review"
            android:elevation="2dp"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#66BCD8"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/et_comment"/>
    </RelativeLayout>
</ScrollView>
